{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=5.6",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/admin_toolbar": "^1.26",
        "drupal/adminimal_theme": "^1.4",
        "drupal/auto_entitylabel": "^2.1",
        "drupal/better_exposed_filters": "^3.0",
        "drupal/bg_image_formatter": "^1.10",
        "drupal/block_field": "^1.0",
        "drupal/bootstrap_barrio": "^4.22",
        "drupal/bootstrap_paragraphs": "^2.0",
        "drupal/business_rules": "^1.0",
        "drupal/colorbox": "^1.4",
        "drupal/colorbox_inline": "^1.1",
        "drupal/console": "^1.0.2",
        "drupal/core": "^8.6.0",
        "drupal/creditfield": "^1.0",
        "drupal/csv_serialization": "^1.4",
        "drupal/editor_file": "^1.4",
        "drupal/extlink": "^1.1",
        "drupal/faqfield": "^1.1",
        "drupal/image_effects": "^2.3",
        "drupal/markdown": "^1.2",
        "drupal/override_node_options": "^2.4",
        "drupal/paragraphs": "^1.5",
        "drupal/pathauto": "^1.3",
        "drupal/rabbit_hole": "^1.0",
        "drupal/redirect_after_login": "^2.3",
        "drupal/rules": "^3.0",
        "drupal/smtp": "^1.0",
        "drupal/structure_sync": "^1.16",
        "drupal/token": "^1.5",
        "drupal/twig_extensions": "^2.0",
        "drupal/twig_field_value": "^1.2",
        "drupal/twig_tweak": "^2.3",
        "drupal/url_redirect": "^2.61",
        "drupal/views_aggregator": "1.x-dev",
        "drupal/views_rest_feed": "^1.0",
        "drupal/webform": "^5.2",
        "drupal/workflow": "^1.1",
        "drupal/youtube": "^1.0",
        "drush/drush": "^9.0.0",
        "twbs/bootstrap": "4.2.1",
        "twig/extensions": "^1.5",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "webflo/drupal-core-require-dev": "^8.6.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },

        "patches": {
            "drupal/colorbox": {
                "Colorbox plugin fix for Drush v9": "https://www.drupal.org/files/issues/2018-11-01/colorbox-plugin-not-defined-2954756.patch"     
            },
            "drupal/entity_reference_revisions": {
                "Fix entity reference error after update to 8.7.1": "https://www.drupal.org/files/issues/2018-11-26/hastranslation-on-null-3016233-2.patch"
            },
            "drupal/business_rules": {
                "Variables Returning Null": "https://www.drupal.org/files/issues/2019-05-10/variables-returning-null-3016888-24.patch"
            }
        },        
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        }
    }
}
